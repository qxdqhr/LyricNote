{
  "name": "lyricnote-monorepo",
  "version": "1.0.0",
  "description": "多端应用框架 - Multi-platform Application Framework",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm build:shared && concurrently \"pnpm dev:backend\" \"pnpm dev:mobile\"",
    "dev:backend": "cd packages/backend && pnpm dev",
    "dev:mobile": "cd packages/mobile && pnpm dev",
    "dev:desktop": "cd packages/desktop && pnpm electron:dev",
    "dev:miniapp": "cd packages/miniapp && pnpm dev",
    "build": "pnpm build:shared && pnpm build:backend && pnpm build:mobile",
    "build:shared": "cd packages/shared && pnpm build",
    "build:backend": "cd packages/backend && pnpm build",
    "build:mobile": "cd packages/mobile && pnpm build",
    "test": "pnpm test:backend && pnpm test:mobile",
    "test:backend": "cd packages/backend && pnpm test",
    "test:mobile": "cd packages/mobile && pnpm test",
    "lint": "pnpm lint:backend && pnpm lint:mobile",
    "lint:backend": "cd packages/backend && pnpm lint",
    "lint:mobile": "cd packages/mobile && pnpm lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm clean:backend && pnpm clean:mobile && rm -rf node_modules",
    "clean:backend": "cd packages/backend && rm -rf node_modules .next",
    "clean:mobile": "cd packages/mobile && rm -rf node_modules",
    "devdb:generate": "cd packages/backend && dotenv -e .env.local -- npx drizzle-kit generate",
    "devdb:push": "cd packages/backend && dotenv -e .env.local -- npx drizzle-kit push",
    "devdb:migrate": "cd packages/backend && dotenv -e .env.local -- npx drizzle-kit migrate",
    "devdb:seed": "cd packages/backend && dotenv -e .env.local -- pnpm db:seed",
    "devdb:studio": "cd packages/backend && dotenv -e .env.local -- npx drizzle-kit studio --port 5555",
    "devdb:introspect": "cd packages/backend && dotenv -e .env.local -- npx drizzle-kit introspect",
    "prodb:generate": "cd packages/backend && dotenv -e .env.production -- npx drizzle-kit generate",
    "prodb:push": "cd packages/backend && dotenv -e .env.production -- npx drizzle-kit push",
    "prodb:migrate": "cd packages/backend && dotenv -e .env.production -- npx drizzle-kit migrate",
    "prodb:seed": "cd packages/backend && dotenv -e .env.production -- pnpm db:seed",
    "prodb:studio": "cd packages/backend && dotenv -e .env.production -- npx drizzle-kit studio --port 5556",
    "prodb:introspect": "cd packages/backend && dotenv -e .env.production -- npx drizzle-kit introspect",
    "setup": "pnpm install && pnpm devdb:generate",
    "reset": "pnpm clean && pnpm setup",
    "quick-setup": "./scripts/setup.sh",
    "quick-dev": "./scripts/dev.sh",
    "ci:test": "pnpm test",
    "ci:build": "pnpm build",
    "ci:lint": "pnpm lint",
    "docker:build": "docker build -f packages/backend/Dockerfile -t app .",
    "docker:run": "docker run -p 3000:3000 app",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "japanese",
    "music",
    "recognition",
    "lyrics",
    "ai",
    "react-native",
    "nextjs",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/your-app"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "@types/react": "~18.2.43",
      "@types/react-dom": "~18.2.17",
      "typescript": "^5.3.3"
    }
  }
}
