{
  "name": "lyricnote-monorepo",
  "version": "1.0.0",
  "description": "🎌 LyricNote - 专注日语歌曲的AI智能听歌识曲应用",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mobile\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:mobile": "cd packages/mobile && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:mobile",
    "build:shared": "cd packages/shared && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:mobile": "cd packages/mobile && npm run build",
    "test": "npm run test:backend && npm run test:mobile",
    "test:backend": "cd packages/backend && npm run test",
    "test:mobile": "cd packages/mobile && npm run test",
    "lint": "npm run lint:backend && npm run lint:mobile",
    "lint:backend": "cd packages/backend && npm run lint",
    "lint:mobile": "cd packages/mobile && npm run lint",
    "clean": "npm run clean:backend && npm run clean:mobile && rm -rf node_modules",
    "clean:backend": "cd packages/backend && rm -rf node_modules .next",
    "clean:mobile": "cd packages/mobile && rm -rf node_modules",
    "db:generate": "cd packages/backend && npm run db:generate",
    "db:push": "cd packages/backend && npm run db:push",
    "db:seed": "cd packages/backend && npm run db:seed",
    "db:studio": "cd packages/backend && npm run db:studio",
    "setup": "npm install && npm run db:generate",
    "reset": "npm run clean && npm run setup",
    "quick-setup": "./scripts/setup.sh",
    "quick-dev": "./scripts/dev.sh",
    "ci:test": "npm run test",
    "ci:build": "npm run build",
    "ci:lint": "npm run lint",
    "docker:build": "docker build -f packages/backend/Dockerfile -t lyricnote .",
    "docker:run": "docker run -p 3000:3000 lyricnote"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "japanese",
    "music",
    "recognition",
    "lyrics",
    "ai",
    "react-native",
    "nextjs",
    "monorepo"
  ],
  "author": "LyricNote Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/lyricnote"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
